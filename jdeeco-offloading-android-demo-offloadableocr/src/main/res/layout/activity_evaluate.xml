<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<EditText
		android:id="@+id/number_cases"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:numeric="integer"
		android:text="100"/>

	<Button
		android:id="@+id/start_evaluation_local"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Evaluate Local"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/start_deeco"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Start DEECo"/>

		<Button
			android:id="@+id/start_evaluation_offload"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Evaluate Offload"/>
	</LinearLayout>

	<TextView
		android:id="@+id/progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		tools:text="24%"/>

</LinearLayout>