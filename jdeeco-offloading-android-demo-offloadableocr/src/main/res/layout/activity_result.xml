<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.kinst.jakub.diploma.offloadableocr.ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/recognized_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ResultHeader" />

            <TextView
                android:id="@+id/ocr_result_device_ip"
                tools:text="192.168.0.2"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/recognition_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ResultHeader" />

            <TextView
                android:id="@+id/ocr_result_duration"
                tools:text="3200 ms"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/recognized_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ResultHeader" />

            <TextView
                android:id="@+id/ocr_result_text"
                tools:text="Result kjfasja kjnadsf a  ja sdf a nf  \nasasdfasfsdaf dsafsdafsddsfdsf a ad af a"
                android:layout_width="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
